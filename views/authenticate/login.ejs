<h1>Login</h1>
<% if(messages.error) {%>
    <%= messages.error %>
<%}%>
<form action="/login" method="POST">
    <div>
        <label>Email</label>
        <input type="text" id="email" name="email">
    </div>
    <div>
        <label>Password</label>
        <input type="password" id="password" name="password">
    </div>
    <div>
        <a href="/register">Register</a>
        <button type="submit">Login</button>
    </div>
</form>